{
  "name": "lumberjack-js-sdk",
  "version": "0.1.0",
  "private": false,
  "description": "Monorepo for Lumberjack JavaScript/TypeScript SDK packages",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "clean": "npm run clean --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "bump-alpha": "node scripts/bump-alpha.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "logging",
    "tracing",
    "observability",
    "typescript",
    "javascript",
    "nextjs"
  ],
  "author": "george@treebeardhq.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/treebeardhq/lumberjack-js-sdk"
  }
}
